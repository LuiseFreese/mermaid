{
  "name": "mermaid-to-dataverse",
  "version": "1.0.0",
  "description": "Convert Mermaid ERD diagrams to Microsoft Dataverse tables and relationships",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cross-env NODE_ENV=development node --watch src/backend/server.js",
    "dev:frontend": "cd src/frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd src/frontend && npm run build",
    "install:all": "npm install && cd src/frontend && npm install",
    "test": "node tests/run-tests.js",
    "test:unit": "jest tests/unit --coverage --coverageDirectory=coverage/unit --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --coverage --coverageDirectory=coverage/integration --detectOpenHandles --forceExit",
    "test:e2e": "jest tests/e2e --runInBand --testTimeout=120000 --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --coverageDirectory=coverage/all --detectOpenHandles --forceExit",
    "test:backend": "npm run test:unit && npm run test:integration",
    "test:frontend": "cd src/frontend && npm run test",
    "test:all": "npm run test",
    "test:quick": "jest tests/unit --silent --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --detectOpenHandles",
    "lint": "eslint src/ tests/ --ext .js,.json",
    "lint:fix": "eslint src/ tests/ --ext .js,.json --fix",
    "lint:frontend": "cd src/frontend && npm run lint",
    "audit": "npm audit --audit-level=moderate",
    "performance": "node tests/run-tests.js --performance",
    "convert": "node src/backend/index.js",
    "deploy": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "cleanup": "powershell -ExecutionPolicy Bypass -File scripts/cleanup-repo.ps1",
    "cleanup:dry": "powershell -ExecutionPolicy Bypass -File scripts/cleanup-repo.ps1 -DryRun"
  },
  "dependencies": {
    "@azure/identity": "^4.11.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@azure/msal-node": "^2.16.2",
    "axios": "^1.11.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nock": "^13.3.3",
    "sinon": "^17.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "nyc": "^15.1.0",
    "jest-extended": "^4.0.2",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "mermaid",
    "dataverse",
    "erd",
    "power-platform",
    "data-modeling"
  ],
  "author": "Luise Freese",
  "license": "MIT"
}