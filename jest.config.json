{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/tests/**/*.test.ts"
  ],
  "testPathIgnorePatterns": [
    "src/frontend/"
  ],
  "collectCoverageFrom": [
    "src/backend/**/*.js",
    "!src/backend/server.js",
    "!**/node_modules/**",
    "!**/coverage/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 18,
      "functions": 14,
      "lines": 15,
      "statements": 15
    },
    "src/backend/services/": {
      "branches": 44,
      "functions": 38,
      "lines": 50,
      "statements": 50
    }
  },
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.js",
    "<rootDir>/tests/supress-console.js"
  ],
  "testTimeout": 30000,
  "verbose": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}
